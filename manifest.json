
{
  "manifest_version": 2,
  "name": "abematv ext",
  "version": "0.0.7",
  "description": "abematvを視聴しやすくする非公式の拡張機能",
  "icons": {"128": "abemaexticon.png"},
  "applications": {
	  "gecko": {
		  "id": "abematvextension@nakayuki.net",
		  "strict_min_version": "45.0"
	  }
  },
  "permissions": [
	  "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://abema.tv/*"],
      "js": ["jquery-2.2.3.min.js", "onairpage.js"],
		"run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "onairpage.js",
	"onairpage.css",
    "jquery-2.2.3.min.js"
  ],
  "options_page": "option.html"
} 