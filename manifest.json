{
	"manifest_version": 2,
	"name": "abematv ext",
	"version": "0.2.2",
	"description": "abematvを視聴しやすくする非公式の拡張機能",
	"author": "AbemaTVChromeExtension on github",
	"icons": {
		"128": "abemaexticon.png"
	},
	"permissions": [
		"storage",
		"alarms",
		"notifications",
		"tabs"
	],
	"content_scripts": [
		{
			"matches": ["https://abema.tv/*"],
			"js": ["jquery-2.2.3.min.js", "settings.js", "onairpage.js"],
			"run_at": "document_start"
	}
	],
	"web_accessible_resources": [
		"onairpage.js",
		"onairpage.css",
		"jquery-2.2.3.min.js",
		"option.html",
		"prognotifies.html",
		"icon/gear.svg"
	],
	"options_page": "option.html",
	"background": {
		"scripts": ["event.js"],
		"persistent": false
	}
}