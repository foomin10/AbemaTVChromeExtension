
{
  "manifest_version": 2,
  "name": "abematv ext",
  "version": "0.0.4",
  "description": "additional css and script for abematv",
  "permissions": [
	  "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://abema.tv/now-on-air/*"],
      "js": ["jquery-2.2.3.min.js", "onairpage.js"]
    }
  ],
  "web_accessible_resources": [
    "onairpage.*",
    "jquery-*"
  ],
  "options_page": "option.html"
} 