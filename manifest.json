{
	"manifest_version": 2,
	"name": "abematv ext",
	"version": "0.1.3",
	"description": "abematvを視聴しやすくする非公式の拡張機能(通知機能実装につき権限追加)",
	"icons": {
		"128": "abemaexticon.png"
	},
	"permissions": [
		"storage",
		"alarms",
		"notifications",
		"tabs"
	],
	"content_scripts": [
		{
			"matches": ["https://abema.tv/*"],
			"js": ["jquery-2.2.3.min.js", "settings.js", "onairpage.js"],
			"run_at": "document_start"
	}
	],
	"web_accessible_resources": [
	"onairpage.js",
	"onairpage.css",
	"jquery-2.2.3.min.js",
	"option.html",
	"prognotifies.html"
	],
	"options_page": "option.html",
	"background": {
		"scripts": ["event.js"],
		"persistent": false
	}
}