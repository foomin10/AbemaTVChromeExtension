{
	"manifest_version": 2,
	"name": "abematv ext",
	"version": "0.1.2",
	"description": "abematvを視聴しやすくする非公式の拡張機能(通知機能実装につき権限追加)",
	"icons": {
		"128": "abemaexticon.png"
	},
	"applications": {
		"gecko": {
			"id": "abematvextension@nakayuki.net",
			"strict_min_version": "45.0",
			"update_url": "https://www.nakayuki.net/abema-ext/update.json"
		}
	},
	"permissions": [
		"storage",
		"alarms",
		"notifications",
		"tabs"
	],
	"content_scripts": [
		{
			"matches": ["https://abema.tv/*"],
			"js": ["jquery-2.2.3.min.js", "settings.js", "onairpage.js"],
			"run_at": "document_start"
	}
	],
	"web_accessible_resources": [
	"onairpage.js",
	"onairpage.css",
	"jquery-2.2.3.min.js",
	"option.html",
	"prognotifies.html"
	],
	"background": {
		"scripts": ["event.js"]
	}
}